{
  "name": "@nanosapp-assessment/server",
  "version": "1.0.0",
  "description": "A simple API to provide information on advertising campaigns",
  "main": "app.ts",
  "scripts": {
    "clean": "npx rimraf ./build/ && npx rimraf ./log/",
    "prebuild": "npm run clean",
    "build": "tsc && copyfiles public/**/* build",
    "start": "node build/bin/www.js",
    "dev": "tsnd --respawn ./bin/www.ts",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "author": "Adel Rodriguez",
  "license": "ISC",
  "dependencies": {
    "copyfiles": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-errors": "^1.7.3",
    "lodash": "^4.17.15",
    "lowdb": "^1.0.0",
    "morgan": "^1.9.1",
    "pm2": "^4.2.3",
    "ts-jest": "^25.2.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.3",
    "@types/http-errors": "^1.6.3",
    "@types/jest": "^25.1.4",
    "@types/lowdb": "^1.0.9",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.9.1",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "jest": "^25.1.0"
  },
  "engines": {
    "node": "12.16.x"
  }
}
